/**app.wxss**/
@import 'assets/styles/weui.wxss';
@import 'assets/styles/iconfont/iconfont.wxss';

page {
  --main-bg-bt: #3acce1;
  width: 100%;
  height: 100vh;
  /* background: var(--main-bg-bt); */
  margin: 0;
  padding: 0;
  font-size: 28rpx;
  box-sizing: border-box;
}

.confirm {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  background: rgba(58, 204, 225, 1);
  opacity: 1;
  color: #fff;
  border-radius: 15rpx;
  font-size: 30rpx;
}

view, image, text {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.fw {
  font-weight: bold;
}
