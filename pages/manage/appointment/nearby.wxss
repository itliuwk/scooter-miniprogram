/* pages/manage/appointment/nearby.wxss */

.nearby {
  box-sizing: border-box;
  width: 100%;
  height: 100vh;
}

.search {
  padding: 40rpx 32rpx 0;
}

.search>view {
  width: 100%;
  height: 104rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 16px rgba(69, 91, 99, 0.08);
  opacity: 1;
  border-radius: 12px;
  line-height: 104rpx;
  padding: 5rpx 40rpx 0;
}

.search icon {
  font-size: 40rpx;
}

.search input {
  display: inline-block;
  width: 90%;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 50rpx;
  position: relative;
  top: 20rpx;
  left: 20rpx;
}

.items {
  margin-top: 30rpx;
  height: calc(100% - 130rpx);
}

.items .item {
  padding: 40rpx 32rpx 0;
  width: 100%;
  border-bottom: 1px solid rgba(244, 244, 246, 0.5);
  display: flex;
}

.items .item image {
  width: 120rpx;
  height: 120rpx;
}

.items .item>view:nth-child(2) {
  flex: 3;
  margin-left: 32rpx;
}

.items .item>view:nth-child(2) view:nth-child(1) {
  margin-bottom: 10rpx;
}

.items .item>view:nth-child(2) view {
  color: rgba(69, 79, 99, 1);
  font-size: 25rpx;
  line-height: 40rpx;
}

.items .item>view:nth-child(3) {
  display: flex;
  align-items: center;
}
