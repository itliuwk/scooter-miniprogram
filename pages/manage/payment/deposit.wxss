/* pages/payment/deposit.wxss */

.page {
  padding: 38rpx;
}

.top {
  height: 400rpx;
  width: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top text {
  font-size: 100rpx;
  font-weight: bold;
}

.top view {
  color: rgba(69, 79, 99, 1);
  font-size: 28rpx;
}

.center>view:nth-child(1) {
  margin-bottom: 20rpx;
  color: #2a2e43;
  font-size: 30rpx;
}

.center>view:nth-child(2) {
  color: #2a2e43;
  font-size: 26rpx;
  margin-bottom: 150rpx;
}

.bottom {
  width: 100%;
  height: 104rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4px 16px rgba(69, 91, 99, 0.08);
  opacity: 1;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 28rpx 38rpx;
  box-sizing: border-box;
}

.bottom view {
  flex: 1;
}

.bottom view:nth-child(1) {
  vertical-align: top;
}

.bottom view:nth-child(1) text {
  margin-left: 20rpx;
  color: #959dad;
  font-size: 28rpx;
}

.bottom view:nth-child(1) image {
  width: 28rpx;
  height: 28rpx;
}

.bottom view:nth-child(2) {
  text-align: right;
}

.bottom view:nth-child(2) image {
  width: 48rpx;
  height: 48rpx;
}

.pay {
  margin-top: 150rpx;
}
