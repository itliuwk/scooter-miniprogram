/* pages/manage/trip/take.wxss */

.top {
  height: 200rpx;
  display: flex;
  text-align: center;
  align-items: flex-end;
  justify-content: center;
  margin-bottom: 20rpx;
}

.top .open {
  color: rgba(42, 46, 67, 1);
}

.center {
  padding: 20rpx 100rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top: 100rpx;
  justify-content: center;
}

.center .item {
  width: 27%;
  margin: 15rpx;
  box-sizing: border-box;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  background: #676868;
  opacity: 1;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.center .item text {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  background: rgba(42, 46, 67, 1);
  border-radius: 50%;
  opacity: 1;
}

.center .item image {
  width: 90rpx;
  height: 70rpx;
}

.center .open {
  border: 4rpx solid #a6e3cb;
  background: #fff;
}

.toHome {
  padding: 0 50rpx;
}
