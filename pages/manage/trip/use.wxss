.container {
  height: 100%;
  width: 100%;
}

#map {
  width: 100%;
  height: 100%;
}

.controls {
  position: relative;
  top: -140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.controls .borrow, .controls .still {
  width: 200rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 10rpx;
  color: #fff;
  margin: 0 80rpx;
  z-index: 100;
}

button::after {
  border-radius: 0 !important;
  border: none !important;
}

button {
  border-radius: 0;
}

.controls  button {
  padding: 0 25rpx;
  border-radius: 10px;
  background: #3497fd;
  color: #fff;
  font-size: 30rpx;
}

.controls  button:nth-child(1) {
  background: #3acce1;
}

/* 顶部提示信息 start */

.info {
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  padding: 0 20rpx 0 40rpx;
  box-sizing: border-box;
}

.info .person {
  display: flex;
}

.info .image {
  width: 70rpx;
  height: 70rpx;
  padding-top: 10rpx;
}

.info>view:nth-child(2) {
  margin-left: 60rpx;
  color: #959dad;
  font-size: 30rpx;
}

.info view  icon {
  margin: 0 20rpx;
  color: #454f63;
  font-weight: bolder;
}

.info .navigation {
  width: 100%;
  height: 100%;
  display: flex;
}

.navigation>view {
  flex: 1;
  display: inline-block;
  line-height: normal;
  text-align: center;
}

.navigation>view  text {
  color: rgba(58, 204, 225, 1);
  font-weight: bold;
}

.navigation>view view {
  color: rgba(120, 132, 158, 1);
}

.to-be-paid {
  width: 100%;
  height: 165rpx;
  position: relative;
}

.to-be-paid image {
  width: 100%;
  height: 100%;
  position: relative;
  top: 1px;
}

.paid-content {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  box-sizing: border-box;
  display: flex;
}

.paid-content>view {
  flex: 1;
}

.paid-content>view:nth-child(1) {
  padding: 60rpx 0 0 28rpx;
  flex: 4;
  color: #fff;
}

.to-pay text {
  display: inline-block;
  background: var(--main-bg-bt);
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  color: #fff;
  box-sizing: border-box;
  position: relative;
  top: 50rpx;
}

/*  提示信息菜单 end */
