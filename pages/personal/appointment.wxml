<!--pages/personal/appointment.wxml-->
<view class="appointment">

  <view class="item">
    <view class="left">
      <view>
        <image src="../../assets/images/time.png"></image>
        <text>{{appointment.date}} {{appointment.time}}</text>
      </view>
      <view class="title">
        <text>预约地址：</text>
        <text>{{appointment.address}}{{appointment.recommend}}</text>
      </view>
      <view class="title">
        <text>预约费用：</text>
        <text>{{appointment.amount}}元</text>
      </view>
    </view>
    <view class="right">
      <view class="opi {{appointment.type == 'RENT' ? '' : 'opi-q'}}"  bindtap="appointmentTap" data-type="{{appointment.type}}">
        {{appointment.typeName}}
      </view>
    </view>
  </view>

</view>