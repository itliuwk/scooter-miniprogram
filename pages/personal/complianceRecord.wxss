/* pages/personal/complianceRecord.wxss */

.credit-score {
  height: 320rpx;
  width: 100vw;
  position: relative;
}

.credit-score >view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.credit-score >view>view {
  width: 100%;
  text-align: center;
  padding-top: 90rpx;
}

.credit-score >view>view view:nth-child(2) {
  padding-top: 10rpx;
}

image {
  height: 100%;
  width: 100%;
}

.scroll {
  height: calc(100vh - 330rpx);
}

.items {
  padding: 30rpx;
}

.item {
  padding: 30rpx;
  box-shadow: 0px 0px 16px rgba(69, 91, 99, 0.08);
  border-radius: 15rpx;
  margin-bottom: 25rpx;
}

.top {
  display: flex;
}

.top >view {
  flex: 1;
}

.top >view view:nth-child(1) {
  font-weight: bold;
}

.top >view view:nth-child(2) {
  color: rgba(42, 46, 67, 1);
  opacity: 0.8;
  font-size: 24rpx;
}

.top >view:nth-child(2) {
  text-align: right;
  color: rgba(255, 36, 111, 0.8);
}

.bottom {
  margin-top: 15rpx;
}

.bottom .df {
  display: flex;
  color: rgba(42, 46, 67, 1);
  opacity: 0.5;
}

.bottom .df view:nth-child(1) {
  flex: 1;
}

.bottom .df view:nth-child(2) {
  flex: 1;
  text-align: right;
}

.bottom .df-time {
  font-weight: bold;
  opacity: 1;
  color: #000;
}

.num {
  text-align: right;
  color: rgba(255, 36, 111, 1);
  opacity: 0.8;
}
