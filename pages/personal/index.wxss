/* pages/personal/index.wxss */

.personal-info {
  height: 400rpx;
  position: relative;
}

.personal-info image {
  width: 100%;
  height: 100%;
}

.personal-info-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 40rpx 80rpx 0;
  box-sizing: border-box;
}

.personal-info-content .image {
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
  border-radius: 50%;
}

.personal-info-content>view {
  display: flex;
}

.personal-info-t {
  margin: 20rpx;
}

.personal-info-t view:nth-child(1) {
  color: rgba(255, 255, 255, 1);
  font-size: 30rpx;
}

.personal-info-t view:nth-child(2) {
  margin-top: 10rpx;
  width: 160rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: rgba(52, 151, 253, 1);
  opacity: 0.69;
  border-radius: 20rpx;
  font-size: 25rpx;
  color: rgba(255, 255, 255, 1);
}

.personal-record {
  margin-top: 70rpx;
}

.personal-record>view {
  min-width: 100rpx;
  text-align: center;
  margin: 0 20rpx;
}

.personal-record>view:nth-child(1) {
  margin-left: 0;
}

.personal-record>view text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
}

.personal-record>view view {
  font-size: 24rpx;
  color: rgba(42, 46, 67, 1);
}

.personal-bottom {
  padding: 80rpx 40rpx 0;
}

.personal-bottom-content {
  width: 100%;
  /* height: 400rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 16px rgba(69, 91, 99, 0.08);
  opacity: 1;
  border-radius: 12px;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: center;
}

.personal-bottom-content>view {
  width: 33.33%;
  height: 200rpx;
  text-align: center;
  padding-top: 60rpx;
  box-sizing: border-box;
}

.personal-bottom-content image {
  width: 40rpx;
  height: 40rpx;
}
