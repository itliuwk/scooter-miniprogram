/* pages/personal/setUp/index.wxss */

.setUp {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}

.info {
  margin: 30rpx 0rpx 50rpx;
  width: 100%;
  height: 226rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 16px rgba(69, 91, 99, 0.08);
  opacity: 1;
  border-radius: 12px;
  box-sizing: border-box;
  padding: 48rpx;
}

.info .image {
  display: inline-block;
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
  border-radius: 50%;
  vertical-align: middle;
}

.info text {
  vertical-align: bottom;
  margin-left: 20rpx;
}

.content {
  box-sizing: border-box;
  padding: 48rpx 48rpx 0;
  box-shadow: 0px -5px 10px -5px rgba(69, 91, 99, 0.08);
}

.title {
  display: flex;
  margin-bottom: 50rpx;
}

.title view, .title text {
  flex: 1;
}

.title view {
  text-align: right;
}

.title>text {
  color: rgba(69, 79, 99, 1);
}

.binding text {
  display: inline-block;
  vertical-align: middle;
  padding-top: 5rpx;
  color: #ffb900;
}

.binding icon {
  vertical-align: middle;
}
