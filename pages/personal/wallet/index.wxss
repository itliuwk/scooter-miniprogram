.wallet {
  padding: 45rpx;
}

.balance {
  width: 100%;
  height: 320rpx;
  box-shadow: 0px 0px 16px rgba(69, 91, 99, 0.08);
  border-radius: 12px;
  padding: 40rpx 35rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.balance view text {
  font-size: 120rpx;
}

.deposit {
  margin-top: 30rpx;
  margin-bottom: 120rpx;
}

.balance view view {
  color: rgba(149, 157, 173, 1);
}

/* .retreat {
  margin-top: 70rpx;
} */

.info {
  text-align: center;
  color: rgba(149, 157, 173, 1);
  margin-top: 20rpx;
}

.no-retreat {
  background: #78849e;
}

.opi {
  text-align: center;
}

.opi> .confirm {
  height: 74rpx;
  line-height: 74rpx;
}

.opi view.confirm {
  width: 40%;
  background: #ececec;
  display: inline-block;
  color: #5bd2e3;
}

.opi view.recharge {
  width: 40%;
  color: #fff;
  display: inline-block;
  margin-bottom: 20rpx;
  background: rgba(58, 204, 225, 1);
}
