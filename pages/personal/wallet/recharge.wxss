/* pages/personal/index.wxss */

.personal-info {
  height: 200rpx;
  position: relative;
  box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.05);
}

.personal-info-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 40rpx 0 0 40rpx;
  box-sizing: border-box;
}

.personal-info-content .image {
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
  border-radius: 50%;
}

.personal-info-content>view {
  display: flex;
}

.personal-info-t {
  margin: 20rpx;
}

.personal-info-t view:nth-child(1) {
  color: #666;
  font-size: 25rpx;
  display: inline-block;
}

.personal-info-t view:nth-child(2) {
  color: #666;
  font-size: 25rpx;
  margin-top: 20rpx;
}

.personal-info-t>view view:nth-child(2) {
  margin: 10rpx 0 0 20rpx;
  display: inline-block;
  padding: 2rpx 30rpx;
  text-align: center;
  background: linear-gradient(145deg, rgba(52, 253, 219, 1) 0%, rgba(46, 135, 226, 1) 100%);
  border-radius: 20rpx;
  font-size: 25rpx;
  color: rgba(255, 255, 255, 1);
}

.recharge {
  padding: 50rpx;
  width: 100%;
}

.items {
  display: flex;
  width: 100%;
  margin: 50rpx 0;
  justify-content: center;
}

.item {
  flex: 1;
  height: 100rpx;
  font-size: 25rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 1px solid rgba(89, 175, 126, 1);
  box-sizing: border-box;
  color: rgba(81, 151, 120, 1);
}

.items .item:nth-child(2) {
  margin: 0 50rpx;
}

.item>view:nth-child(1) {
  font-size: 35rpx;
}

.custom {
  margin-bottom: 50rpx;
}

.custom input {
  margin-top: 50rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(89, 175, 126, 1);
  border-radius: 10rpx;
  height: 80rpx;
  padding-left: 28rpx;
}

.filed {
  color: rgba(107, 107, 107, 1);
}

.confirm {
  margin-top: 50rpx;
}
